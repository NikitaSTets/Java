<GridPane  alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="Controller">

    <padding><Insets top="25" right="25" bottom="10" left="25"/>
